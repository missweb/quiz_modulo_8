
<form name="busqueda" id="busqueda" action="/quizes">
	<label for="search">Buscador de preguntas</label>
	<input type="text" name="search" id="search" value="<%=query%>" placeholder="Teclee el texto a buscar" />
	<input type="submit" value="Buscar" />
	<%if(query) { %>
		<a href="/quizes">Todas las preguntas</a>
	<% }; %>
</form>
<p/>
<table>
<% var i; for (i=0; i < quizes.length; i++) { %>
   <tr>
      <td align="left"><a href="quizes/<%= quizes[i].id %>"><%= quizes[i].pregunta %></a></td>
      <td>             <a href="quizes/<%= quizes[i].id %>/edit"><button>editar</button></a></td>
      <td>
	      <form method="post" action="quizes/<%= quizes[i].id %>?_method=delete">
		      <button type="submit" onClick="return confirm('Borrar: <%= quizes[i].pregunta %>');">
			      borrar
		      </button>
	      </form>
      </td>
   </tr>
<% } %>
</table>
<p/>
<a href="/quizes/new"><button type="button">Crear pregunta</button></a>
